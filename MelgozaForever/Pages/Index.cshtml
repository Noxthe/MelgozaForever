@page
@model IndexModel
@{
    ViewData["Title"] = "MelgozaForever";
}

<!DOCTYPE html>
<html lang="en">
    <head>
        <link rel="stylesheet" href="index.css" />
        <title>MelgozaForever</title>
    </head>
<body>
    <section class="login-form">
        <div class="form-box">
            <div class="form-value">
                <form method="post" action="">
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    <h2>Inicio de Sesión</h2>
                    <div class="inputbox">
                        <ion-icon name="person-outline"></ion-icon>
                        <input name="usernameTextBox" type="text" asp-for="Credential.Username" required/>
                        <label name="usernameLb" asp-for="Credential.Username">Usuario: </label>
                    </div>
                    <span class="text-danger" asp-validation-for="Credential.Username"></span>
                    <div class="inputbox">
                        <ion-icon name="lock-closed-outline"></ion-icon>
                        <input name="passwordTextBox" type="password" asp-for="Credential.Password" required/>
                        <label name="passwordLb" asp-for="Credential.Password">Contraseña: </label>
                    </div>
                    <span class="text-danger" asp-validation-for="Credential.Password"></span>
                    <input type="submit" class="btn btn-primary" value="Iniciar Sesión"/>
                </form>
            </div>
        </div>
    </section>
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
</body>
</html>


